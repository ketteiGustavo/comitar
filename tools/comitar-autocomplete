# Autocomplete para o comando 'comitar'
# Fonte: https://github.com/ketteiGustavo/comitar

_comitar_autocomplete() {
  local cur prev opts
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  prev="${COMP_WORDS[COMP_CWORD-1]}"

  # Lista completa de opções e aliases
  opts="--help -h --version -V --init init --install-hook --commit --changelog changelog --upgrade up -up --uninstall --news news --config -c --undo"

  COMPREPLY=( $(compgen -W "${opts}" -- "$cur") )
  return 0
}

# Registra a função de autocomplete para 'comitar' e seu alias 'cmt'
complete -F _comitar_autocomplete comitar
complete -F _comitar_autocomplete cmt